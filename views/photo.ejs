<main>
    <div class="ui grid container">
        <div class="ui three column centered grid">
            <% posts.forEach(function(photo, index) { %>

                    <div class="column">
                    <div class="ui card">
                        <div class="image">
                            <img src="<%= photo.image %>" style="max-height: 150px">
                        </div>
                        <div class="content">
                            <a class="header"><%= photo.title %></a>
                            <div class="meta">
                                <span class="date">
                                    <i class="calendar icon"></i> <%= photo.created_at.getFullYear() %>
                                    <br>
                                    <i class="image icon"></i> <%= photo.image_id %>
                                </span>
                            </div>
                            <div class="description">
                                <%= photo.description %>
                            </div>
                        </div>
                       <div class="extra content">
                            <form action="/destroy" method="photo" style="display: inline" id="destroy_form<%= index %>">
                                <input type="hidden" name="image_id" value="<%= photo.image_id %>">
                                <a onclick="document.getElementById('destroy_form<%= index %>').submit(); return false;">
                                    <i class="remove icon"></i> Remove
                                </a>
                            </form>
                            <a href="/edit/<%= photo.image_id %>">
                                <i class="edit icon"></i> Update
                            </a>
                        </div>
                    </div>
                </div>

            <% }); %>
        </div>
    </div>

<% include ../partials/scripts %>
</body>
</html>